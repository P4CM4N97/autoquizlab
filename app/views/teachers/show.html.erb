<h1>Profesor: <%= @teacher.name %></h1>

<p>
  <strong>Correo Electrónico:</strong>
  <%= @teacher.email %>
</p>
<hr class="sin-color">

<div class="card">
  <div class="card-body wow-bg" id="formBg">
    <div class="container">
      <div class="row">
        <div class="col-6">
          <h5 style="color:white;">Mi Materia:</h5>
         <h5 style="color:white;"> <%= @teacher.subject.name %> </h5>
        </div>

        <div class="col-6">
          <h5 style="color:white;">Examenes</h5>
          <table class="table-dark">
            <thead>
              <tr>
                <th scope="col">Crear Examen</th>
