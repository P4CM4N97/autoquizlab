<div class="card">
  <div class="card-body wow-bg" id="formBg">
    <div class="row">
      <div class="col-6">
        <h4>Alumnos</h4>
        <table class="table-dark">
          <thead>
            <tr>
              <th scope="col">Nombre</th>
              <th scope="col">Correo</th>
              <th scope="col">Acciones</th>
            </tr>
          </thead>
          <tbody>
            <% @students.each do |student|  %>
              <tr>
                <td scope="row"><%= student.name %></td>
                <td scope="row"><%= student.email %></td>
                <td scope="row"><div class="btn-group" role="group" aria-label="Acciones">
          <%= link_to 'Ver', student_path(student), class:"btn btn-outline-light btn-md" %>
          <%= link_to 'Editar', edit_student_path(student), class: "btn btn-outline-light btn-md"%>
          <%= link_to 'Eliminar', student_path(student), method: :delete, data: { confirm: '¿Estás seguro?' }, class: "btn btn-outline-light btn-md" %>
        </div>
                </td>
              </tr>
            <% end %>
          </tbody>
        </table>
      </div>
    </div>
  </div>
</div>
