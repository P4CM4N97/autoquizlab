<!-- app/views/subjects/new.html.erb -->
<h1>Crea una nueva materia</h1>
<div class="grid">
  <svg class="grid-svg" xmlns="http://www.w3.org/2000/svg" width="982" height="786" viewBox="0 0 982 786" fill="none">
    <!-- Tu contenido SVG aquÃ­ -->
  </svg>
  <div class="blur"></div>
</div>

<div class="form-containerslo">
  <div class="form-sectionslo" id="signup-section">


<%= form_with(model: [@institution, @subject], local: true) do |form| %>
  <% if @subject.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@subject.errors.count, "error") %> no se pudo guardar la materia</h2>

      <ul>
        <% @subject.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= form.label :name, 'Materia' %>
    <%= form.text_field :name %>
  </div>

    <div class="field">
    <%= form.label :teacher, 'Profesor' %>
    <%= form.select :teacher_id, options_for_select(@institution.teachers.map {|teacher| [teacher.name, teacher.id]}) %>
  </div>

  <div class="actions">
    <%= form.submit 'Save' %>
  </div>
<% end %>
</div>
</div>
<%= link_to 'Back to Institutions', institutions_path, class: 'button third' %>
