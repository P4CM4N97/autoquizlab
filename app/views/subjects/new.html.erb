<h1>Crea una Nueva Materia</h1>
<hr class="sin-color">
<hr class="sin-color">

<div class="grid">
  <svg class="grid-svg" xmlns="http://www.w3.org/2000/svg" width="982" height="786" viewBox="0 0 982 786" fill="none">
    <!-- Tu contenido SVG aquÃ­ -->
  </svg>
  <div class="blur"></div>
</div>

<div class="card" >
  <div class="card-body wow-bg" id="formBg" >


<%= form_with(model: [@institution, @subject], local: true) do |form| %>
  <% if @subject.errors.any? %>
        <div class="form-inputs">

    <div id="error_explanation">
      <h2><%= pluralize(@subject.errors.count, "error") %> no se pudo guardar la materia</h2>

      <ul>
        <% @subject.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field" style="color:white;">
    <%= form.label :name, 'Materia' %>
    <%= form.text_field :name %>
  </div>
<hr class="sin-color">

    <div class="field" style="color:white;">
    <%= form.label :teacher, 'Profesor' %>
    <%= form.select :teacher_id, options_for_select(@institution.teachers.map {|teacher| [teacher.name, teacher.id]}) %>
  </div>
 </div>
</div>
</div>
<hr class="sin-color">

<div class="form-actions">
 <button> <%= form.submit 'Guardar', class: "btn btn-outline-light btn-md" %> </button>
</div>

<% end %>

<hr class="sin-color">
<hr class="sin-color">
<hr class="sin-color">



 <%= link_to 'Back to Institutions', institutions_path, class: "btn btn-outline-light btn-md" %>
</div>
</div>
